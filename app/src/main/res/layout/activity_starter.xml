<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StarterActivity">

    <TextView
        android:id="@+id/starterchooseheading"
        android:layout_width="247dp"
        android:layout_height="79dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="48dp"
        android:text="Choose your genres"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="80dp" />

    <ListView
        android:id="@+id/choosegenrelistview"
        android:layout_width="308dp"
        android:layout_height="469dp"
        android:layout_below="@+id/starterchooseheading"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="102dp"
        android:choiceMode="multipleChoice"
        android:listSelector="@android:color/darker_gray"/>

    <Button
        android:id="@+id/submitgenrebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="164dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="27dp"
        android:onClick="submitgenreclicked"
        android:text="Submit" />
</RelativeLayout>