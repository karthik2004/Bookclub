<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddClubFragment">

    <TextView
        android:id="@+id/Heading"
        android:layout_width="248dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="145dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Add Book"
        android:textAlignment="center"
        android:textSize="42sp" />

    <EditText
        android:id="@+id/genreedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Heading"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="407dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:hint="Add your Book."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="388dp"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="269dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Share,Borrow or Lend Books with our network of Bookreaders"
        android:textSize="18sp" />

    <Button
        android:id="@+id/genrebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="159dp"
        android:layout_marginBottom="144dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Add Book" />
</RelativeLayout>